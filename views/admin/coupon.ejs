<!-- admin sidebar -->
<%- include('../partials/admin-sidebar')%>
  <!-- end admin sidebar -->

  <div class="col py-3">

    <section>
      <div class="container">
        <div class=" mt-100 mb-5 d-flex align-items-center justify-content-center">
          <h3 class="text-decoration-underline">Coupen management</h3>
      </div>
      <div class="container mb-5 border border-secondary">
        <div class=" d-flex align-items-center justify-content-center">
          <h5 class="text-decoration-underline">Add coupen</h5>
      </div>
        
        <form class="mt-3 mb-3" action="/admin/addCoupon" method="post">
          <div class="d-flex justify-content-between">

            <div class="d-flex flex-column">
              <label >Coupencode</label>
              <input class="rounded-2" name="couponName" style="width: 189px; height: 38px;"  type="text">
            </div>

            <div class="d-flex flex-column">
              <label >Discount in %</label>
              <input name="discount" class="rounded-2" style="width: 189px; height: 38px;" type="text">
            </div>

            <div class="d-flex flex-column">
              <label >Maximum limit</label>
              <input name="maxLimit" class="rounded-2" style="width: 189px; height: 38px;" type="text">
            </div>
            
            <div class="d-flex flex-column">
              <label >Expiry date</label>
              <input type="date"  class="rounded-2" style="width: 189px; height: 38px;" class="form-control border-secondary" id="exdate" name="expirationTime" aria-describedby="emailHelp"/>
            </div>

            <button class="btn btn-success mt-4" style="width: 75px; height: 38px;" type="submit">Submit</button>
           
          </div>
        </form>

      </div>
     
      <table class="table table-success table-striped" id="table">
        <thead>
          <tr>
            <th scope="col">No</th>
            <th scope="col">Coupen</th>
            <th scope="col">Expiry date</th>
            <th scope="col">Controlls</th>
  
          </tr>
        </thead>
  
  
        <tbody>
          <% let count=1 %> 
          <% couponData.forEach(element => { %>
              <tr>
                <td><%=count %> </td>
                
                <td><%=element.couponName %> </td>
                
                <td><%=element.expirationTime %> </td>
            
                <td>
                  <a href="" class="btn btn-success">Edit</a>
                  <a href="" class="btn btn-danger">Delete</a>
                </td>
                  
              </tr>
              <% count++ %> 
              <% }) %>
              
        </tbody>
  
      </table>
  

      </div>
    </section>
      
          

   



</div>
</div>
</div>
